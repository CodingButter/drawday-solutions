rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to manage their own competitions
    match /competitions/{competitionId} {
      // Allow authenticated users to read competitions
      // Note: For queries, Firestore checks if the rule COULD pass for ANY document
      // So we can't use resource.data in read rules for queries
      allow read: if request.auth != null;
      
      // Users can create new competitions with their userId
      allow create: if request.auth != null && 
        request.resource.data.userId == request.auth.uid;
      
      // Users can update/delete their own competitions
      allow update, delete: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
  }
}